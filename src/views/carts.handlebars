<h1 class="text-3xl font-bold text-center text-pink-700 mb-6">Carrito de Compras</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#each productos}}
    <div class="bg-white shadow-md rounded-lg p-4">
        <h2 class="text-lg font-semibold text-gray-700">Producto: {{this.product.title}}</h2>
        <p class="text-gray-600">Cantidad: {{this.quantity}}</p>
        <p class="text-gray-500">Precio unitario: ${{this.product.price}}</p>
        <p class="text-pink-600 font-bold">Subtotal: ${{multiply this.product.price this.quantity}}</p>
    </div>
    {{/each}}
</div>

<div class="mt-6 text-center">
    <a href="/products" class="bg-pink-600 text-white py-2 px-4 rounded hover:bg-pink-500">
        Seguir comprando
    </a>
</div>