<div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Formulario -->
        <div class="lg:col-span-1">
            <form id="productForm" class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-bold mb-6">Agregar Producto</h2>

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nombre</label>
                        <input type="text" id="title" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Precio</label>
                        <input type="number" id="price" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Descripción</label>
                        <textarea id="description" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500"></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">URL Imagen</label>
                        <input type="text" id="img" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Código</label>
                        <input type="text" id="code" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Stock</label>
                        <input type="number" id="stock" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500">
                    </div>

                    <button type="submit" id="btnEnviar"
                        class="w-full bg-rose-500 text-white py-2 px-4 rounded-md hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2">
                        Agregar Producto
                    </button>
                </div>
            </form>
        </div>

        <!-- Lista de Productos -->
        <div class="lg:col-span-3">
            <h2 class="text-xl font-bold mb-6">Productos en Tiempo Real</h2>
            <div id="contenedorProductos" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Los productos se renderizarán aquí dinámicamente -->
            </div>
        </div>
    </div>
</div>

<!-- Scripts para Socket.IO y lógica de cliente -->

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="/js/index.js"></script>