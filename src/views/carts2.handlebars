<h1 class="text-3xl font-bold text-center text-pink-700 mb-6">Tu Carrito</h1>

{{#if empty}}
<div class="text-center py-8">
    <p class="text-gray-600 text-lg">Tu carrito está vacío</p>
    <a href="/products" class="inline-block mt-4 bg-pink-600 text-white py-2 px-4 rounded hover:bg-pink-500">
        Ir a comprar
    </a>
</div>
{{else}}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#each productos}}
    <div class="bg-white shadow-md rounded-lg p-4">
        <img src="{{this.product.img}}" alt="{{this.product.title}}" class="w-full h-48 object-cover rounded-t-lg">
        <h2 class="text-lg font-semibold text-gray-700">{{this.product.title}}</h2>
        <p class="text-gray-600">Cantidad: {{this.quantity}}</p>
        <p class="text-gray-500">Precio unitario: ${{this.product.price}}</p>
        <p class="text-pink-600 font-bold mb-4">Subtotal: ${{multiply this.product.price this.quantity}}</p>
        <form action="/api/carts/{{../cartId}}/products/{{this.product._id}}" method="DELETE" class="inline">
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-400">
                Eliminar
            </button>
        </form>
    </div>
    {{/each}}
</div>

<div class="mt-8 text-center">
    <p class="text-xl font-bold text-gray-800 mb-4">Total: ${{total}}</p>
    <a href="/products" class="bg-pink-600 text-white py-2 px-4 rounded hover:bg-pink-500 mr-4">
        Seguir comprando
    </a>
    <a href="/api/carts/{{cartId}}/purchase" class="bg-green-600 text-white py-2 px-4 rounded hover:bg-green-500">
        Finalizar compra
    </a>
</div>
{{/if}}