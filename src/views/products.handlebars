<h1 class="text-3xl font-bold text-center text-pink-700 mb-6">Productos</h1>
<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {{#each productos}}
    <div class="bg-white shadow-md rounded-lg p-4">
        <h2 class="text-xl font-semibold text-gray-700">{{title}}</h2>
        <p class="text-gray-600">{{description}}</p>
        <p class="text-pink-600 font-bold">Precio: ${{price}}</p>
        <p class="text-gray-500">Categor√≠a: {{category}}</p>
        <a href="/carts/{{cartId}}/product/{{_id}}"
            class="mt-4 block bg-pink-600 text-white text-center py-2 rounded hover:bg-pink-500">
            Agregar al carrito
        </a>
    </div>
    {{/each}}
</div>